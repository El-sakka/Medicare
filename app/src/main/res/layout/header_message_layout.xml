<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:id="@+id/header_message_layout"
    android:background="@color/text_main_color"
    android:layout_height="@dimen/_50sdp">

    <ImageView
        android:id="@+id/iv_back_arrow"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_4sdp"
        android:src="@drawable/ic_keyboard_arrow_left_black_24dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_header_profile_image"
        android:src="@mipmap/placeholder_acc_pic"
        android:textSize="@dimen/_16ssp"
        android:textColor="@color/white"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_6sdp"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp" />

    <TextView
        android:id="@+id/tv_name_header_chat"
        tools:text="Dalia Emad"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="@dimen/_8sdp"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>
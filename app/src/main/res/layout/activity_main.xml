<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/iv_medicare_logo"
        android:layout_width="84dp"
        android:layout_height="163dp"
        android:layout_marginTop="142dp"
        android:src="@drawable/ic_medi_care_logo"
        android:layout_gravity="center"
      />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="47sp"
        android:textColor="@color/text_main_color"
        android:lineSpacingExtra="19sp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        tools:text="MediCare"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/text_main_color"
        android:lineSpacingExtra="5sp"
        android:layout_gravity="center_horizontal"
        tools:text="first personal health record"
        />

    <Spinner
        android:id="@+id/spinner_language"
        android:entries="@array/languages_entities"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="74dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:spinnerMode="dropdown"
        android:backgroundTint="@color/text_main_color"
        android:theme="@style/spinnerItemStyle"
     />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:textColor="#ffffff"
        android:lineSpacingExtra="2sp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        tools:text="Done"
        android:background="@drawable/ic_rectangle_15"
        />

</LinearLayout>